{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server.js"
    },
    {
      "name": "Debug it",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${userHome}/.nvm/versions/node/v20.19.2/bin/node",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
  ]
}